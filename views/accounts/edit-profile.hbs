<div class="container" style="margin-top: 50px;">

<div class="col-sm-6 col-sm-offset-3">

	{{#if hashErrors}}
	{{#each messages}}
	<div class="alert alert-success alert-dismissible">
	  <button type="button" name="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;{{this}}</span>
	  </button>
	</div>
	{{/each}}
	{{/if}}

	<h1><span class="fa fa-sign-in"></span> Edit Profile</h1>
	<!-- LOGIN FORM -->
	<form action="/user/edit-profile" method="post">
    <div class="form-group">
			<label>Name</label>
			<input type="text" class="form-control" value="{{user.profile.name}}" name="name">
		</div>
		<div class="form-group">
			<label>Address</label>
			<input type="text" class="form-control" value="{{user.address}}" name="address">
		</div>
		<button type="submit" class="btn btn-warning btn-lg">Edit</button>
	</form>

	<hr>
</div>

</div>
