<div class="container">
    <div class="row">
        {{#each products}}
            <div class="col-md-4">
                <a href="/product/{{this.id}}">
                    <div class="thumbnail">
                      <img src="{{this.image}}" alt="">
                      <div class="caption">
                        <h3>{{this.name}}</h3>
                        <p>$ {{this.price}}</p>
                      </div>
                    </div>

                </a>

            </div>
        {{/each}}
    </div>

</div>
